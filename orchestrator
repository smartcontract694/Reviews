if __name__ == "__main__":
    user_prompt = "Show the distribution of review ratings for Samsung S23"
    print("ğŸ¯ User Prompt:", user_prompt)
    result = orchestrator(user_prompt)
    print("ğŸ“¦ Response:\n", result)
    
    
    
